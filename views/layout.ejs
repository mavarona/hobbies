<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Aficiones -
        <%-namePage %>
    </title>
    <link rel="stylesheet" href="https://necolas.github.io/normalize.css/8.0.1/normalize.css">
    <link href="https://fonts.googleapis.com/css?family=Raleway:400,700,900|Staatliches&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/trix.css">
    <link rel="stylesheet" href="/css/app.css">
</head>

<body>

    <header class="site-header contenedor">
        <a href="/">
            <img src="/img/logo.png" alt="Logo Hobbies">
        </a>

        <nav class="nav">
            <a href="#">Crear Grupo</a>
            <a href="/login">Iniciar Sesión</a>
            <a href="/create-account">Registrarse</a>
        </nav>
    </header>

    <% if(locals.messages){ %>
        <% const category = Object.keys(locals.messages) %>
        <% if(category.length) { %>
            <% locals.messages[category].forEach(alert => { %>
                <div class="alertas">
                    <p class="alerta <%= category %>"><%= alert %></p>
                </div>  
            <% }) %>
        <% } %>
    <% } %>

    <%- body %>

        <footer class="site-footer contenedor">
            <nav class="nav">
                <a href="#">Crear Grupo</a>
                <a href="/login">Iniciar Sesión</a>
                <a href="/create-account">Registrarse</a>
            </nav>
            <p class="copyright">
                Todos los derechos reservados hobbies
                <%- year %> &copy;
            </p>
        </footer>
    <script src="/js/trix.js"></script>
</body>

</html>